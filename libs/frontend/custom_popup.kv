<SuccessSignUpPopup>
    size_hint: 0.85, 1
    background_normal: ''
    background_color: (0, 0, 0, 0)
    auto_dismiss: False
    good_color: app.theme_palette['good_color']

    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, None
        height: self.minimum_height
        padding: dp(12)
        spacing: dp(8)

        opacity: 0.95
        canvas.before:
            Color:
                rgba: app.theme_palette['background_color']
            RoundedRectangle:
                radius: [(15.0, 15.0), (15.0, 15.0), (15.0, 15.0), (15.0, 15.0)]
                pos: self.pos
                size: self.size

        Label:
            size_hint: 1, None
            height: self.texture_size[1]
            text_size: self.width, None
            halign: 'left'
            line_height: 1.2
            font_size: sp(18)
            color: app.theme_palette['text_background_color']
            text: 'Successfully create new account!.'

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None
            height: self.minimum_height
            spacing: dp(4)

            Label:
                size_hint: 1.5, 1
                text_size: self.size
                halign: 'right'
                valign: 'center'
                text: 'Your Password:'
                color: app.theme_palette['text_background_color']

            RoundedButton:
                id: password_display
                size_hint: 2, None
                padding: dp(4), dp(4)

                font_size: sp(16)
                line_height: 1.2
                color: app.theme_palette['text_background_color']

                on_release: root.copy_password()

        Label:
            size_hint: 1, None
            height: self.texture_size[1]
            text_size: self.width, None
            halign: 'left'
            line_height: 1.2
            color: app.theme_palette['support_text_color']
            text: 'Click on the password to copy.'

        Label:
            size_hint: 1, None
            height: self.texture_size[1]
            text_size: self.width, None
            halign: 'left'
            line_height: 1.2
            color: app.theme_palette['text_background_color']
            text: 'Please remember your password as we cannot recover your password.'

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None
            height: self.minimum_height
            spacing: dp(8)
            padding: dp(8)

            RoundedButton:
                text: '%s  Login' % icon('chevron-left')
                bg_color: app.theme_palette['secondary_color']
                color: app.theme_palette['text_secondary_color']
                on_release:
                    root.dismiss()
                    root.screen_instance.app.route_manager.transition = NoTransition()
                    root.screen_instance.app.route_manager.current = 'login_route'

            RoundedButton:
                text: '%s  Newsfeed' % icon('home')
                bg_color: app.theme_palette['primary_color']
                color: app.theme_palette['text_primary_color']
                on_release:
                    root.dismiss()
                    root.screen_instance.app.route_manager.transition.direction = 'left'
                    root.screen_instance.app.route_manager.current = 'newsfeed_route'

<SettingPopup>
    size_hint: 0.85, 1
    background_normal: ''
    background_color: (0, 0, 0, 0)
    auto_dismiss: False

    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, None
        height: self.minimum_height
        padding: dp(12)
        spacing: dp(8)

        opacity: 0.95
        canvas.before:
            Color:
                rgba: app.theme_palette['background_color']
            RoundedRectangle:
                radius: [(15.0, 15.0), (15.0, 15.0), (15.0, 15.0), (15.0, 15.0)]
                pos: self.pos
                size: self.size

        RoundedButton:
            bg_color: app.theme_palette['primary_color']
            color: app.theme_palette['text_primary_color']
            text: '%s  Sign Out' % icon('sign-out-alt', int(sp(16)))
            on_release:
                root.dismiss()
                app.root.transition.direction = 'right'
#**                app.root.current = 'login_route'

        InfoLabel:
            id: post_num_help

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None
            height: self.minimum_height
            spacing: dp(8)

            Label:
                size_hint: 4, 1
                text_size: self.size
                halign: 'right'
                valign: 'center'
                color: app.theme_palette['text_background_color']
                markup: True
                text: 'Number of Post Show:'

            InputLayout:
                ResizableTextInput:
                    id: post_num_input
                    multiline: False
                    text: str(app.user_profile.get_num_post_show())
                    on_double_tap: self.select_all()

            IconButton:
                size_hint: 0.5, 1
                color: app.theme_palette['support_text_color']
                text: '%s' % icon('question-circle', int(sp(16)))
                on_release: root.show_help('post_num_help')

        InfoLabel:
            id: msg_num_help

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None
            height: self.minimum_height
            spacing: dp(8)

            Label:
                size_hint: 4, 1
                text_size: self.size
                halign: 'right'
                valign: 'center'
                color: app.theme_palette['text_background_color']
                markup: True
                text: 'Number of Message Show:'

            InputLayout:
                ResizableTextInput:
                    id: msg_num_input
                    multiline: False
                    text: str(app.user_profile.get_num_message_show())
                    on_double_tap: self.select_all()


            IconButton:
                size_hint: 0.5, 1
                color: app.theme_palette['support_text_color']
                text: '%s' % icon('question-circle', int(sp(16)))
                on_release: root.show_help('msg_num_help')

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None
            height: self.minimum_height
            spacing: dp(8)

            RoundedButton:
                bg_color: app.theme_palette['comment_background_color']
                color: app.theme_palette['text_background_color']
                text: '%s  Cancel' % icon('ban', int(sp(16)))
                on_release: root.dismiss()

            RoundedButton:
                bg_color: app.theme_palette['secondary_color']
                color: app.theme_palette['text_secondary_color']
                text: '%s  Save' % icon('save', int(sp(16)))
                on_release: root.update_user_profile()