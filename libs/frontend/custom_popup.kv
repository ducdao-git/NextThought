<FilterPopup>
    size_hint: 0.8, 1
    background_normal: ''
    background_color: (0, 0, 0, 0)
    auto_dismiss: False
#    text_color: app.theme_palette['text_primary_color']

    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, None
        height: self.minimum_height

        opacity: 0.95
        canvas.before:
            Color:
                rgba: app.theme_palette['background_color']
            RoundedRectangle:
                radius: [(15.0, 15.0), (15.0, 15.0), (15.0, 15.0), (15.0, 15.0)]
                pos: self.pos
                size: self.size

        Label:
            size_hint: 1, None
            height: self.texture_size[1] * 2.5
            text_size: root.width, None
            halign: 'center'
            text: 'Filter post by username or tag'
            color: app.theme_palette['text_background_color']

        BoxLayout:
            size_hint: 1, None
            height: self.minimum_height
            orientation: 'vertical'
            padding: dp(12), dp(0), dp(12), dp(12)
            spacing: dp(12)

            InputLayout:
                IconButton:
                    text: '%s' % icon('user', int(sp(16)))

                ResizableTextInput:
                    id: filter_username
                    focus: True
                    hint_text: "Enter an username"

            InputLayout:
                IconButton:
                    text: '%s' % icon('hashtag', int(sp(16)))

                ResizableTextInput:
                    id: filter_tag
                    hint_text: "Enter a tag"

        Button:
            size_hint: 1, None
            height: self.texture_size[1] * 2.5

            background_normal: ''
            background_down: ''
            background_color: [0, 0, 0, 0]

            markup: True
            text: '%s  Filter' % icon ('filter')
            color: app.theme_palette['text_primary_color']
            on_release: root.dismiss()

            opacity: 0.95
            canvas.before:
                Color:
                    rgba: app.theme_palette['primary_color']
                RoundedRectangle:
                    radius: [(0, 0), (0, 0), (15.0, 15.0), (15.0, 15.0)]
                    pos: self.pos
                    size: self.size


