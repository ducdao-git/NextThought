<PostOptionButton>
    size_hint: 1, 1
    markup: True
    color: app.theme_palette['support_text_color']
    edit_icon: '%s' % icon('pencil-alt')
    delete_icon: '%s' % icon('trash-alt')
    error_icon: '%s' % icon('exclamation-circle')
    on_release:

<PostInfoButton>
    size_hint: 8, None
    global_icon: '%s' % icon('globe-americas')
    posted_time_color: app.theme_palette['support_text_color']


<PostContentButton>
    size_hint: 1, None


<PostInfoButton, PostContentButton>
    height: self.texture_size[1]
    background_down: ''
    background_normal: ''
    background_color: [0, 0.5, 0, 0]
    text_size: self.size
    halign: 'left'
    valign: 'center'
    markup: True
    font_size: sp(14)
    padding: dp(12), dp(0)
    color: app.theme_palette['text_background_color']


<PostDividerLabel>
    size_hint: 1, None
    height: dp(10)
    color: app.theme_palette['divider_color']


<PostView>
    orientation: 'vertical'
    size_hint: 1, None
    height: 500
    padding: [dp(0), dp(8), dp(0), dp(0)]
    spacing: dp(8)

    BoxLayout:
        id: row
        orientation: 'horizontal'
        size_hint: 1, None
        height: self.minimum_height
