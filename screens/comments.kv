<CommentsRoute>:
    name: 'comments_route'

    BoxLayout:
        orientation: 'vertical'
        size: root.size

        canvas.before:
            Color:
                rgba: app.theme_palette['background_color']
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            size_hint: 1, None
            height: dp(24)
            canvas.before:
                Color:
                    rgba: app.theme_palette['primary_variant_color']
                Rectangle:
                    size: self.size
                    pos: self.pos

        BoxLayout:  # action bar
            size_hint: 1, None
            height: dp(56)
            canvas.before:
                Color:
                    rgba: app.theme_palette['primary_color']
                Rectangle:
                    size: self.size
                    pos: self.pos

            IconButton:
                text: "   %s   Post's Comments" % icon('chevron-left')
                color: app.theme_palette['text_primary_color']
                valign: 'center'
                halign: 'left'
                on_release:
                    app.root.transition = NoTransition()
                    app.root.current = app.root.return_route

#        BoxLayout:
#            id: short_top_comment_holder
#            size_hint: 1, None
#            height: self.minimum_height

        FloatLayout:  # layout for tasks view and add button
            ScrollView:
                do_scroll: False, True
                canvas.before:
                    Color:
                        rgba: app.theme_palette['background_color']
                    Rectangle:
                        size: self.size
                        pos: self.pos

                BoxLayout: # must specify height to scrollable
                    id: comment_scrollview
                    orientation: 'vertical'
                    size_hint_y: None
                    padding: [0, 0, 0, dp(56)]  # account for part that are hide behind the bottom nav bar
                    height: self.minimum_height  # minimum_height is min height to contain all children

            BoxLayout:
                size_hint: 1, None
                height: self.minimum_height + dp(1)
                orientation: 'horizontal'
                padding: dp(4), dp(8)

                canvas:
                    Color:
                        rgba: app.theme_palette['comment_background_color']
                    Rectangle:
                        pos: self.pos[0], self.pos[1] + self.size[1] - dp(1)
                        size: self.size[0], dp(1.5)

                IconButton:
                    color: app.theme_palette['primary_color']
                    text: '%s' % icon('chevron-right', int(sp(14)))

                InputLayout:
                    size_hint: 8, None

                    ResizableTextInput:
                        id: comment_content_input
                        focus: True
                        hint_text: "Write a comment..."

                IconButton:
                    color: app.theme_palette['primary_color']
                    text: '%s' % icon('paper-plane', int(sp(14)))
                    on_release: root.create_comment()