<AppCrashScreen>
    name: 'app_crash_route'

    AnchorLayout:
        canvas.before:
            Color:
                rgba: app.theme_palette['primary_color']
            Triangle:
                points: [0, self.size[1], self.size[1], 0, self.size[1], self.size[1]]

            Color:
                rgba: app.theme_palette['primary_variant_color']
            Triangle:
                points: [self.size[1], 0, 0, self.size[1], 0, 0]

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.7, None
            height: self.minimum_height
            padding: dp(12)
            spacing: dp(12)

            opacity: 0.95
            canvas.before:
                Color:
                    rgba: app.theme_palette['background_color']
                RoundedRectangle:
                    radius: [(15.0, 15.0), (15.0, 15.0), (15.0, 15.0), (15.0, 15.0)]
                    pos: self.pos
                    size: self.size

            Label:
                id: error_popup_message
                size_hint: 1, None
                height: self.texture_size[1]
                padding: dp(12), dp(0)
                text_size: self.parent.width, None
                halign: 'left'
                color: app.theme_palette['text_background_color']
                markup: True
                font_size: sp(20)
                text: 'No Internet Connection!\n[size=14sp]Please check the internet and retry.[/size]'

            Button:
                size_hint: 1, None
                height: self.texture_size[1]
                padding: dp(12), dp(12)

                background_normal: ''
                background_down: ''
                background_color: [0, 0, 0, 0]

                markup: True
                font_size: sp(15)
                text: 'Close App'
                color: app.theme_palette['text_primary_color']
                on_release: app.stop()

                opacity: 0.95
                canvas.before:
                    Color:
                        rgba: app.theme_palette['primary_color']
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size